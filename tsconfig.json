{
    "compilerOptions": {
      "target": "es5",
      "lib": ["DOM", "ES6"],
      "module": "commonjs",
      "outDir": "build/",
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "./build", "spec"]
  }
  